#!/bin/sh

set -e

for cmd in stow xstow ; do
  if command -v "$cmd" > /dev/null 2>&1 ; then
    prog="$cmd"
    break
  fi
done

if [ "x$prog" = "x" ] ; then
  printf "stow/xstow required!\n"
  exit 1
fi

# mutt
for package in aspell bash bin elvis emacs i3 readline tmux vim x ; do
  if [ "$package" = "i3" ] || [ "$package" = "x" ] ; then
    if command -v X > /dev/null 2>&1 ; then
      printf 'Configuring %s\n' "$package"

      "$prog" "$package"
    else
      printf 'Unconfiguring %s\n' "$package"

      "$prog" -D "$package"
    fi
  else
    printf 'Configuring %s\n' "$package"

    "$prog" "$package"
  fi
done

printf 'Finished!\n'
